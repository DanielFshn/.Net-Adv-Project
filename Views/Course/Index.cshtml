@model IEnumerable<Course_Store.Models.Requests.CourseAddRequest>

@{
    ViewBag.Title = "Index";
}
<style>
    body {
        background-color: #f6fbff;
    }
</style>
<br />
<br />
<br />
<br />
<br />
<br />
<h2>Index</h2>
@using (Html.BeginForm())
{
    <table>
        <tr>
            <th>
                @Html.ActionLink("Create New", "Create")
            </th>
            <th>
                @Html.DropDownList("Id", null, htmlAttributes: new { @class = "form-control" })
            </th>
            <th>
                <form method="post" action="/Course/Index">
                    <input type="submit" value="Search" />
                </form>
            </th>
        </tr>
    </table>

}
@if (Model != null)
{
    <div class="courses-area section-padding40 fix">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-7 col-lg-8">
                    <div class="section-tittle text-center mb-55">
                        <h2>All Courses</h2>
                    </div>
                </div>
            </div>
            <div class="flex-center-start">
                @if (Model.Count() == 0)
                {
                    <h1>Nuk ka asnje kurs per momentin</h1>
                }
            </div>
            <div class="row properties__caption carousel slide ">
                @foreach (var course in Model)
                {
                    <div class="col-md-4">
                        @Html.Partial("_CourseCart", course)
                    </div>
                }

            </div>

            <div class="row justify-content-center">
                <div class="col-xl-7 col-lg-8">
                    <div class="section-tittle text-center mt-40">
                        <a href="/Course/Index" class="border-btn">Load More</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

